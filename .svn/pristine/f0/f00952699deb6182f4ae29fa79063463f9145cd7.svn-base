                            width: 153px;
                            vertical-align: top;
                            overflow: hidden;
    
                            &:not(:first-child) {
                                border-left: 1px solid #e9e9e9;
                            }

                            > .item {
                                > .sub_infos {
                                    > .wrap {
                                        > .cate {
                                            > ul {
                                                > li {
                                                    &:first-child {
                                                        > .item {
                                                            .pdt {
                                                                padding: 7px 5px 0;
                                                                font-size: 1.143em;
                                                            }
                                                            .volume {
                                                                padding: 10px 0 4px;
                                                            }
                                                        }
                                                    }

                                                    > .item {
                                                        .pdt {
                                                            padding: 0 5px 0;
                                                            font-size: 1em;
                                                        }
                                                        .volume {
                                                            padding: 5px 0 2px;
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }

    .treemap_wrap {
        position: relative;

        &:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 40px;
            border-radius: 4px;
            background: #eeeeee;
        }
    }
