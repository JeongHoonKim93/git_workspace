@charset "utf-8";

// Style
#content.page-brand {
    .summary {
        @include clearBoth();

        > * {
            > .wrap {
                display: table;
                width: 100px;
                table-layout: fixed;

                > ul {
                    display: table-row;

                    > li {
                        display: table-cell;

                        &:not(:first-child) {
                            // margin-left: -1px;
                        }
    
                        > .item {
                            border: 1px solid #e9e9e9;
                            background: #ffffff;
                            overflow: hidden;
            
                            > .infos {
                                background: #ffffff;
                            }
                            > .sub_infos {
                                position: relative;
                                padding: 7px 10px 10px;
                                background: #f1f1f1;
                                text-align: center;
            
                                input {
                                    @include customComponent();
            
                                    & + label {
                                        @include inlineBlock();
                                        width: 80px;
                                        border: 1px solid #dadada;
                                        background: #ffffff;
                                        line-height: 30px;
                                        text-align: center;
                                        cursor: pointer;
                                        @include transition(.3);
            
                                        &:nth-child(2) {
                                            border-right: none;
                                            border-radius: 50px 0 0 50px;
                                        }
                                        &:nth-child(4) {
                                            border-left: none;
                                            border-radius: 0 50px 50px 0;
                                        }
                                    }
            
                                    &:hover {
                                        & + label {
                                            border-color: #808080;
                                            background: #efefef;
                                            color: #505050;
                                        }
                                    }
                                    &:checked {
                                        & + label {
                                            border-color: #7f7f7f;
                                            background: #7f7f7f;
                                            color: #ffffff;
                                        }
                                    }
                                }
            
                                input[type=radio]:nth-child(3) {
                                    &:checked {
                                        & + label + .wrap > .buz {
                                            margin-left: -100%;
                                        }
                                    }
                                }
            
                                > .wrap {
                                    display: block;
                                    width: 100%;
                                    padding: 5px 0 0 0;
                                    overflow: hidden;
                                    white-space: nowrap;
            
                                    > .buz {
                                        @include inlineBlock();
                                        width: 100%;
                                        height: 416px;
                                        margin-left: 0;
                                        vertical-align: top;
                                        @include transition( 0.3 );
            
                                        > ul {
                                            > li {
                                                &:not(:first-child) {
                                                    padding: 5px 0 0 0;
                                                }
            
                                                > .item {
                                                    position: relative;
                                                    height: 100px;
                                                    padding: 28px 10px 0;
                                                    border-radius: 4px;
                                                    background: #ffffff;
                                                    box-sizing: border-box;
                                                    overflow: hidden;
                                                    @include clearBoth();
    
                                                    &:empty {
                                                        background: #f9f9f9;
                                                    }
    
                                                    > * {
                                                        box-sizing: border-box;
                                                    }
            
                                                    .type {
                                                        float: left;
                                                        width: 60%;
                                                        height: 16px;
                                                        line-height: 1;
                                                        text-align: left;
                                                    }
                                                    .senti {
                                                        float: right;
                                                        max-width: 40%;
                                                        padding: 0 5px;
                                                        border-radius: 50px;
                                                        background: #aaaaaa;
                                                        color: #ffffff;
                                                        font-size: 0.857em;
                                                        line-height: 16px;
                                                        text-align: right;
            
                                                        &.is-positive {
                                                            background: $font-senti-positive;
                                                        }
                                                        &.is-negative {
                                                            background: $font-senti-negative;
                                                        }
                                                        &.is-neutral {
                                                            background: $font-senti-neutral;
                                                        }
                                                    }
                                                    .volume {
                                                        float: left;
                                                        width: 60%;
                                                        padding: 6px 0 0 0;
                                                        color: $font_color_hl2;
                                                        font-size: 1.286em;
                                                        font-weight: bold;
                                                        text-align: left;
                                                        line-height: 1;
                                                    }
                                                    .ui_fluc {
                                                        float: right;
                                                        max-width: 40%;
                                                        padding: 8px 0 0 0;
                                                        line-height: 1;
                                                        text-align: right;
                                                    }
                                                }
                                            }
                                        }
                                    }
                                    > .cate {
                                        @include inlineBlock();
                                        width: 100%;
                                        height: 416px;
                                        vertical-align: top;
            
                                        > ul {
                                            > li {
                                                &:not(:first-child) {
                                                    padding: 5px 0 0 0;
                                                }
            
                                                &:first-child {
                                                    .item {
                                                        height: 95px;
                                                    }
                                                }
            
                                                > .item {
                                                    position: relative;
                                                    height: 75px;
                                                    padding: 10px;
                                                    border-radius: 4px;
                                                    background: #ffffff;
                                                    box-sizing: border-box;
                                                    overflow: hidden;
                                                    text-align: center;
    
                                                    &:empty {
                                                        background: #f9f9f9;
                                                    }
    
                                                    .category {
                                                        display: block;
                                                        font-size: 0.857em;
                                                        line-height: 1;
                                                        overflow: hidden;
                                                        white-space: nowrap;
                                                        text-overflow: ellipsis;
                                                    }
                                                    .pdt {
                                                        display: block;
                                                        padding: 7px 5px 3px;
                                                        color: $font_color_hl2;
                                                        font-weight: bold;
                                                        text-align: center;
                                                        line-height: 1;
                                                        overflow: hidden;
                                                        white-space: nowrap;
                                                        text-overflow: ellipsis;
                                                    }
                                                    .volume {
                                                        width: 100%;
                                                        padding: 4px 0 0 0;
                                                        text-align: center;
                                                        line-height: 1;
                                                    }
                                                    .ui_fluc {
                                                        max-width: 65px;
                                                        height: 16px;
                                                        padding: 0 5px;
                                                        border-radius: 50px;
                                                        background: #f0f0f0;
                                                        font-size: 0.857em;
                                                        line-height: 16px;
                                                        text-align: left;
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }

