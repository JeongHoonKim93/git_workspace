@charset "utf-8";

.ui_elm_cloud {
	position: relative;
	text-align: center;

	> .line_area {
		display: none;
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height:100%;

		> * {
			background: #d1d1d1 !important;
		}
	}
	
	> .item {
		position: absolute;
		border: 1px solid #cbcbcb;
		border-radius: 3px;
		overflow: hidden;
		border-radius: 3px;
		background: #eeeeee;
		@include opacity( 0 );

		&.all {
			color: #333333;

			> * {
				> strong {
					display: block;
					max-width: 120px;
					padding: 8px 20px;
					font-size: 1.250em;
				}
			}
		}

		&.postive {
			border: 2px solid $font_senti_postive;
		}
		&.negative {
			border: 2px solid $font_senti_negative
		}
		&.neutral {
			border: 2px solid $font_senti_neutral;
		}

		> * {
			display: block;
			white-space: nowrap;

			> strong {
				display: block;
				max-width: 60px;
				padding: 8px 15px 2px;
				overflow: hidden;
				text-overflow: ellipsis;
				white-space: nowrap;
				text-align: center;
				line-height: 1;
			}

			> span {
				display: block;
				padding: 0 5px 3px;
				color: #767676;
				font-size: 0.917em;
				font-weight: normal;
				text-align: center;
				line-height: 1;
			}

			.dv {
				@include inlineBlock();
				max-width: 50px;
			}

			.gage {
				display: block;
				height: 6px;
				margin: 3px 4px;
				border-radius: 3px;
				overflow: hidden;
				white-space: nowrap;
				@include clearBoth();

				> * {
					float: left;
					height: 10px;
					@include textHidden();

					&:nth-child( 1 ) {
						background: $font_senti_postive;
					}
					&:nth-child( 2 ) {
						background: $font_senti_negative;
					}
					&:nth-child( 3 ) {
						background: $font_senti_neutral;
					}
				}
			}
		}
	}

	&.small {
		> .item {
			> * {
				> strong {
					padding: 8px 15px;
				}
			}

			&.all {
				> * {
					> strong {
						padding: 15px;
					}
				}
			}
		}
	}
}

.ui_word_cloud {
	> * {
		line-height: 1;

		> a {
			@include transition();
			padding: 0 8px;

			&:hover {
				background: lighten( $font_color, 50 );
			}
		}
	}

	$fs: 0.917em, 1em, 1.167em, 1.333em, 1.5em, 1.667em, 1.833em, 2.167em, 2.5em, 3.333em;
	@each $item in $fs {
		$Loop1: index($fs, $item);

		> .w#{$Loop1} {
			@if $Loop1 > 8 {
				font-weight: bold;
			}
			font-size: $item;
		}
	}
}

.ui_awsome_cloud {
	> * {
		visibility: hidden;
	}
}

.ui_3d_cloud {
	min-height: 100px;

	canvas {
		display: block;
		margin: 0 auto;
	}

	ul {
		display: none;
	}
}