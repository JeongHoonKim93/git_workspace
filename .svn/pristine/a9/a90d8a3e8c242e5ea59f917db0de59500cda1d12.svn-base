// loader
.ui_loader_container {
	position: relative;

	&:before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		border-radius: 4px;
		z-index: 1;
		visibility: hidden;
		@include backgroundAlpha(#ffffff, 0.8);
		@include opacity(0);
		@include transition(0.2);
	}

	&:after {
		content: '';
		display: block;
		position: absolute;
		top: 50%;
		left: 50%;
		width: 40px;
		height: 40px;
		margin: -20px 0 0 -20px;
		background: url(#{$ui_img_path}ui_loader_00.gif) no-repeat center center;
		font-size: 10px;
		text-align: center;
		line-height: 40px;
		z-index: 1;
		visibility: hidden;
		@include opacity(0);
		@include transition(0.2);
	}

	&.is-loading {

		&:before,
		&:after {
			visibility: visible;
			@include opacity(1);
		}
	}
}

// Input(text/textarea)
.ui_input {
	width: 100%;
	height: 28px;
	border: 1px solid $component_brd_color;
	background: #ffffff;
	color: #505050;
	padding-left: 10px;
	border-radius: 5px;
	box-sizing: border-box;
	outline: none;
	// height: 26px;
	// padding: 0 10px;
	// border: 1px solid $component_brd_color;
	// background: #ffffff;
	// box-sizing: border-box;
	// line-height: 24px;
	// outline: none;
	@include transition();

	&.small {
		height: 22px;
		line-height: 20px;
	}

	&.big {
		height: 32px;
		line-height: 30px;
	}

	&:hover,
	&:focus {
		&:not([readonly]) {
			border: 1px solid $component_active_color;
		}
	}

	&[readonly] {
		background: #efefef;
	}
}

.ui_input_iufo {
	display: block;
	padding: 0 0 0 5px;
	color: #a1a1a1;
	font-size: 0.917em;
	line-height: inherit;

	&.small {
		line-height: 22px;
	}

	&.big {
		line-height: 32px;
	}
}

// Textarea
.ui_textarea {
	display: block;
	padding: 10px;
	border: 1px solid $component_brd_color;
	box-sizing: border-box;
	background: #ffffff;
	line-height: 1.6em;
	resize: none;
	outline: none;
	@include transition();

	&:hover,
	&:focus {
		border: 1px solid $point_color;
	}
}

// Paginate
.ui_paginate {
	position: relative;
	padding: 10px 0;
	font-size: 1px;
	line-height: 0;

	>* {
		font-size: 12em;
		line-height: 1;
	}

	.in_wrap {
		@include inlineBlock();

		&:after {
			@include clearBoth();
		}

		>* {
			position: relative;
			float: left;
			min-width: 25px;
			height: 25px;
			padding: 0 5px;
			color: $component_font;
			margin-right: 1px;
			line-height: 25px;
			font-size: 11px;
			box-sizing: border-box;
			@include transition();

			&:hover {
				background: #e9e9e9;
			}

			&.active {
				background: #efefef;
				color: $component_active_color_hl;
			}

			&.page_prev {
				border: 1px solid #efefef;
				text-align: center;
				// text-indent: -9999px;

				&:after {
					content: '\e001';
					font-family: 'icomoon';
					color: $component_font;
					font-size: 13px;
					line-height: 25px;
				}

				&.prev {

					&:after {
						content: '\e003';
					}
				}

				&+a {
					font-size: 14px;
				}

				&.ui_disabled {
					&:after {
						color: #cccdcd;
					}
				}
			}

			&.page_next {
				border: 1px solid #efefef;
				text-align: center;

				&:after {
					content: '\e000';
					font-family: 'icomoon';
					font-size: 13px;
					line-height: 25px;
				}

				&.next {

					&:after {
						content: '\e002';
					}
				}

				&.ui_disabled {
					&:after {
						color: #cccdcd;
					}
				}
			}
		}
	}
}

// Fluc
.ui_fluc {
	@include inlineBlock();
	position: relative;
	line-height: 1;
	@include transition();

	&.is-box {
		padding: 0 5px;
		border-radius: 50px;
		background: #f0f0f0;
		line-height: 16px;
	}

	&.before {

		&.up:before {
			content: '\e086';
			font-family: 'icomoon';
			color: #f32539;
		}

		&.dn:before {
			content: '\e087';
			font-family: 'icomoon';
			color: #266ccc;
		}

		&.none:before {
			content: '- ';
			font-size: 1.2em;
			font-weight: bold;
			color: #898a8b;
		}
	}

	&.after {
		&.up:after {
			content: ' ▲';
			color: #e41c1c;
		}

		&.dn:after {
			content: ' ▼';
			color: #2d6ceb;
		}

		&.none:after {
			content: ' -';
			font-size: 1.2em;
			font-weight: bold;
			color: #898a8b;
		}
	}
}

// UI - Section > Row > Col > Box
.ui_section {
	display: block;
	padding: 40px 0;

	>.wrap {
		width: $doc_wid;
		margin: 0 auto;

		>h3 {
			display: block;
			padding: 20px 0;
			color: #000000;
			font-size: 1.857em;
			font-weight: bold;
			line-height: 1;
			text-align: center;
		}
	}

	&:nth-child(even) {
		background: #eeeeee;
	}
}

.ui_row {
	position: relative;
	padding-bottom: 20px;
	//margin: 0 -10px;
	@include clearBoth();

	&:last-child {
		padding: 0 !important;
	}

	>.ui_col {
		position: relative;
		//padding: 0 10px;

		@for $Loop1 from 1 through 24 {
			&.w#{$Loop1} {
				float: left;
				width: (100% / 24) * $Loop1;
				box-sizing: border-box;

				&:last-child:not(:first-child) {
					float: right;
				}
			}
		}

		.ui_col {
			padding: 20px;
		}

		&.is-no-pad {
			padding: 0;
		}

		&.is-10-pad {
			padding: 10px;
		}

		&.is-15-pad {
			padding: 15px;
		}
	}

	.ui_row {
		// padding-top: 25px !important;
		// padding-bottom: 40px;

		&:last-child {
			padding-bottom: 0;
		}

		.ui_row {
			padding-bottom: 10px;

			&:last-child {
				padding-bottom: 0;
			}
		}
	}

	&.is-no-pad-top {
		padding-top: 0 !important;
	}

	// Padding 포함
	&.on_pad {
		margin: 0 -10px;

		>.ui_col {
			padding: 0 10px;
		}

		&.is-pad-05 {
			margin: 0 -4px;

			>.ui_col {
				padding: 0 4px;
			}
		}
	}

	// Cols에 세로 보더 생성
	&.on_bd {
		.ui_col {
			border-right: 1px solid #eeeeee;
			box-sizing: border-box;

			&:last-child {
				border-right: none;
			}
		}
	}

}

.ui_box {
	position: relative;
	min-height: 90px;
	background: #ffffff;
	box-sizing: border-box;
	@include transition();

	.box_header {
		position: relative;
		padding: 5px 0 5px 9px;
		border-bottom: 1px solid #e1e1e1;

		&.is-no-brd {
			border-bottom: none;

			&+.box_content {
				padding-top: 0 !important;
			}
		}

		&.is-bd {
			border-bottom: 1px solid #eeeeee !important;
		}

		>h4 {
			position: relative;
			padding: 0;
			color: $font_color_hl2;
			font-size: 20px;
			font-weight: bold;
			line-height: 28px;
			@include transition();

			&:before {
				content: '';
				position: absolute;
				top: 50%;
				left: -9px;
				width: 3px;
				height: 18px;
				background: $font_color_hl2;
				border-radius: 2px;
				margin-top: -9px;
			}
		}

		>h5 {
			color: #000000;
			font-size: 1.286em;
			line-height: 30px;
			@include transition();
		}

		>.box_header_rc {
			position: absolute;
			top: 5px;
			right: 0px;
			line-height: 28px;
			@include clearBoth();

			>* {
				float: left;
				margin: 0 4px 0 0;

				&:last-child {
					margin-right: 0;
				}
			}
		}

		>.box_header_cc {
			padding: 10px 0;
			border-bottom: 1px solid #e9e9e9;
			text-align: center;

			>* {
				display: inline-block;
			}
		}

		em {
			font-size: 22px;
		}
	}

	.box_content_header {
		padding: 10px;
		background: #f9f9f9;
		line-height: 26px;
		@include clearBoth();

		&.bot_bd {
			border-bottom: 1px dashed #dfdfdf;
		}

		.lc {
			float: left;
		}

		.rc {
			float: right;
		}

		>* {
			@include clearBoth();

			>* {
				float: left;
				margin: 0 2px 0 0;

				&:last-child {
					margin-right: 0;
				}
			}
		}

		&.is-pad-05 {
			padding: 0 5px;
		}
	}

	.box_content {
		position: relative;
		padding: 10px 0;

		>.wrap {
			padding: 15px;

			&.is-2-depth {
				margin-top: 25px;
				padding: 0 !important;
				border: 1px solid #e1e1e1;
			}
		}

		&.is-no-pad-top {
			padding-top: 0;
		}

		&.is-no-pad {
			padding: 0;
		}

		&.is-top-pad {
			padding-top: 15px !important;
		}
	}

	.box_footer {
