@charset "utf-8";

// Common UI
*[data-dg-type] {
	line-height: 1;
}

.ui_invisible {
	position: absolute !important;
	width: 0;
	height: 0;
	font-size: 0;
	overflow: hidden;
	visibility: hidden;
}

*[disabled],
.ui_disabled {
	// opacity: .7;
	pointer-events: none;

	&+label {
		border-color: #dadada;
		background: #efefef;
		pointer-events: none;
	}

	input {
		border-color: #dadada;
		background: #efefef;
	}

	label {
		border-color: #dadada;
		background: #efefef;
	}
}

.ui_wid_100p {
	width: 100% !important;
	box-sizing: border-box;
}

.ui_al {
	// 텍스트 정렬(좌)
	text-align: left !important;
}

.ui_ac {
	// 텍스트 정렬(중)
	text-align: center !important;
}

.ui_ar {
	// 텍스트 정렬(우)
	text-align: right !important;
}

.ui_vt {
	// 상하 정렬(상)
	vertical-align: top !important;
}

.ui_vm {
	// 상하 정렬(Baseline)
	vertical-align: baseline !important;
}

.ui_vb {
	// 상하 정렬(하)
	vertical-align: bottom !important;
}

.ui_autowrap {
	line-height: 100% !important;
	overflow: visible !important;
	white-space: normal !important;
}

// 링크 텍스트(언더라인 이펙트)
.ui_lnk {
	&:hover {
		text-decoration: underline
	}
}

.ui_label {
	position: relative;
	display: inline-block;
	line-height: 22px;
	padding: 0 6px 0 22px;
	background: #f3f3f3;
	color: $component_font  !important;
	border-radius: 100px;

	&:before {
		content: '';
		position: absolute;
		top: 5px;
		left: 5px;
		display: block;
		width: 12px;
		height: 12px;
		border-radius: 50%;
		background: #808080;
	}

	&.fc_positive {
		background: #ecf4fa;

		&:before {
			content: '';
			background-color: $font-senti-positive;
		}
	}

	&.fc_negative {
		background: #fcebeb;

		&:before {
			content: '';
			background-color: $font-senti-negative;
		}
	}

	&.fc_neutral {
		background: #f3f3f3;

		&:before {
			content: '';
			background-color: $font-senti-neutral;
		}
	}
}

// 아이콘
.ui_icon {
	font-family: 'icomoon';
	font-size: 16px;
}

.ui_icon_img {
	position: relative;
	padding-left: 15px;


	&:before {
		content: '';
		position: absolute;
		top: 3px;
		left: 0;
		display: block;
		width: 14px;
		height: 14px;
		background: url(../img/ui/ui_btns_icon.png) no-repeat 0 0;
	}

	&.top {
		&:before {
			background-position: -360px -0px;
		}
	}

	&.hot {
		&:before {
			background-position: -360px -25px;
		}
	}
}

// Bullet
.ui_bullet {
	@include inlineBlock();

	>* {
		display: block;
		width: 10px;
		height: 16px;
		margin: 0 5px 0 0;
		background: url(../img/ui/ui_bullets.png) no-repeat 0 0;
		text-align: left;
		text-indent: -9999px;

		// 카페 아이콘
		&.cafe {
			width: 14px;
			background-position: -77px -16px;
		}
	}
}

// Chart
.ui_chart_wrap {
	min-height: 100px;
	font-size: 12px;

	// text {
	//     font-size: 12px;
	// }

	// .amcharts-balloon-div {
	//     * {
	//         font-size: 12px;
	//     }
	// }

	* {
		font-family: inherit !important;
		@include transition(0);
	}

	&:not(.is-not-hand) {

		.amcharts-pie-item,
		.amcharts-graph-column-element,
		.amcharts-graph-bullet,
		.amcharts-graph-fill,
		.axis_pointer .amcharts-axis-label {
			cursor: pointer;
		}
	}

	// 비교 차트인 경우 카테고리엑시스 비교기간 색상
	&.is-compare {
		.amcharts-category-axis {
			.amcharts-axis-label {
				tspan:last-child:not(:only-child) {
					fill: #c0c0c0;
				}
			}
		}
	}

	// 클라우드 차트
	.amcharts-WordCloud {
		.word_item {
			cursor: pointer !important;

			rect,
			text {}

			rect {
				fill-opacity: 0;
			}

			&:hover {
				rect {
					fill-opacity: .5;
					@include transition(.24);
				}

				text {
					fill: #ffffff !important;
					@include transition(.24);
				}
			}

			&.active {
				rect {
					fill-opacity: 1;
					@include transition(.24);
				}

				text {
					fill: #ffffff !important;
					@include transition(.24);
				}
			}
		}
	}

	// 트리맵 차트
	// .amcharts-NavigationBar-group {
