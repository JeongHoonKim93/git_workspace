	line-height: 1;

	&.before {
		padding-left: 14px;

		&:before {
			content: '';
			position: absolute;
			top: 50%;
			left: 0;
			display: block;
			width: 8px;
			height: 8px;
			margin-top: -4px;
		}
	}

	&.color_01 {

		&:before {
			background: #88e2bb;
		}
	}

	&.color_02 {

		&:before {
			background: #ede376;
		}
	}

	&.color_03 {

		&:before {
			background: #f3be79;
		}
	}
}