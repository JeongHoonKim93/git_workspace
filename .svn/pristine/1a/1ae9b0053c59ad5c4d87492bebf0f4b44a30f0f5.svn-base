@charset "utf-8";

// Style
#wrap.is-error {
    min-width: auto;

    .error {
        .wrap {
            width: auto;
            padding: 150px 0 0 0;
            margin: 0 auto;
            text-align: center;

            .img {
                display: block;
                font-size: 0;
                line-height: 0;

                img {
                    display: block;
                    margin: 0 auto;
                }
            }

            .title {
                padding: 35px 0;
                color: #000000;
                font-size: 26px;
                line-height: 1.4em;
            }

            .msg {
                color: #999999;
                font-size: 14px;
                line-height: 1.2em;

                strong {
                    color: #333333;
                    font-weight: normal;
                }
            }
        }
    }
}